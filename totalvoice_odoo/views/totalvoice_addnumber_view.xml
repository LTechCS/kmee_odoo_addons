<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">view.wizard.register.partner.form</field>
        <field name="model">wizard.register.partner.number</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Select contact">
                <group>
                    <field name="partner_id" readonly="False"/>
                </group>
                <group>
                    <button name="register_number" class="btn-primary"
                            string="Next" type="object" />
                </group>
                <script>
                    $(document).ready(function(){
                    $(".modal-footer").hide();
                    });
                </script>
            </form>
        </field>
    </record>

 </odoo>
