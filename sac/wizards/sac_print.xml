<odoo>

    <record model="ir.ui.view" id="sac_print_form_view">
        <field name="name">sac.print.form (in sac)</field>
        <field name="model">sac.print</field>
        <field name="arch" type="xml">
            <form string="Sac Print">
                Deseja imprimir todos os chamados prontos para envio?
                <group>
                    <field name="name" invisible="1"/>
                </group>
                <footer>
                    <button name="doit"
                            string="Imprimir"
                            class="btn-primary"
                            type="object"/>
                    <button string="Cancelar"
                            class="btn-default"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="sac_print_act_window">
        <field name="name">Imprimir</field>
        <field name="res_model">sac.print</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>

    <!--<record model="ir.values" id="sac_print_act_multi">-->
        <!--<field name="name">Sac Print</field> &lt;!&ndash; TODO &ndash;&gt;-->
        <!--<field name="key2">client_action_multi</field>-->
