        <!--<field name="model">source.model</field> &lt;!&ndash; TODO &ndash;&gt;-->
    <!--</record>-->

    <record model="ir.ui.menu" id="sac_print_menu">
        <field name="name">Imprimir</field>
        <field name="parent_id" ref="sac.sac_base"/>
        <field name="action" ref="sac_print_act_window"/>
        <field name="sequence" eval="36"/>
    </record>
</odoo>
