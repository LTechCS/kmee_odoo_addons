<odoo>
    <record model="ir.ui.view" id="product_template_form_view">
        <field name="name">product.template.form (in sac)</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <div name="options" position="inside">
                <div>
					<field name="sac_ok" modifiers="{}"/>
					<label for="sac_ok"/>
                </div>
            </div>
        </field>
    </record>

    <record model="ir.ui.menu" id="sac_product_menu">
        <field name="name">Produtos</field>
        <field name="parent_id" ref="sac_submenu_config"/>
        <field name="action" ref="product.product_template_action"/>
        <field name="sequence" eval="6"/>
    </record>
</odoo>
